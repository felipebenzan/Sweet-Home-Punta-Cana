
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isStaff() {
      // This is a placeholder. In a real app, you would check a custom claim.
      // For example: return request.auth.token.role == 'staff'
      // We will keep it open for now for broad testing.
      return isSignedIn(); 
    }
    
    function isOwner(userId) {
        return isSignedIn() && request.auth.uid == userId;
    }

    // PUBLIC DATA
    match /rooms/{roomId} {
      allow get, list: if true;
      allow write: if isStaff();
    }
    match /excursions/{excursionId} {
      allow get, list: if true;
      allow write: if isStaff();
    }
    match /rates/{roomId}/calendar/{date} {
        allow get, list: if true;
        allow write: if isStaff();
    }
    
    // USER-SPECIFIC DATA

    // Room reservations
    match /reservations/{reservationId} {
      // Anyone can create a pending reservation.
      allow create: if true;
      // Only staff or the owner can read it.
      allow read: if isStaff() || (resource.data.guestUid != null && isOwner(resource.data.guestUid));
      // Only staff can modify confirmed reservations. The owner can update it before it's confirmed (e.g. payment)
      allow update, delete: if isStaff(); // This might need refinement for payment flows
    }

    // Service bookings (like transfers, laundry)
    match /serviceBookings/{bookingId} {
      // Anyone can create a booking, which starts as PENDING_PAYMENT.
      allow create: if true;
      
      // After creation, only the owner or staff can read it.
      allow read: if isStaff() || (resource.data.guestUid != null && isOwner(resource.data.guestUid));
      
      // The key change: The owner can update their own booking (to confirm payment),
      // and staff can modify or delete it.
      allow update: if isStaff() || (resource.data.guestUid != null && isOwner(resource.data.guestUid));
      allow delete: if isStaff();
    }

    // User profile
    match /users/{userId} {
      allow read, write: if isOwner(userId);
      allow list, create: if isStaff(); // Only staff can create new users or list them all
    }
  }
}
